data "aws_ami" "amazon_linux" {
  most_recent = true
  owners      = ["amazon"]

  filter {
    name   = "name"
    values = ["al2023-ami-*-x86_64"]
  }
}

module "network" {
  source = "../../blueprints/vpc-standard"

  env         = "dev"
  cidr_block = "10.0.0.0/16"

  subnet = {
    cidr_block        = "10.0.1.0/24"
    availability_zone = "us-east-1a"
    subnet_name       = "dev-public-subnet"
  }

  tags = {
    Environment = "dev"
    Project     = "PadraoAWS"
  }
}

module "key_pair" {
  source = "../../modules/key-pair"

  key_name        = "dev-key"
  public_key_path = "/home/devops/.ssh/id_rsa.pub"

  tags = {
    Environment = "dev"
  }
}

module "bastion" {
  source = "../../modules/ec2"

  name              = "dev-bastion"
  ami_id            = data.aws_ami.amazon_linux.id
  instance_type     = "t3.micro"
  subnet_id         = module.network.public_subnet_ids[0]
  security_group_ids = [module.security_group_bastion.security_group_id]
  key_name          = module.key_pair.key_name

  tags = {
    Environment = "dev"
    Project     = "PadraoAWS"
  }
}

module "security_group_bastion" {
  source = "../../modules/security-group"

  sg_name     = "dev-bastion-sg"
  description = "Bastion SSH access"
  vpc_id      = module.network.vpc_id

  ingress_rules = [
    {
      from_port   = 22
      to_port     = 22
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
      description = "SSH"
    }
  ]

  tags = {
    Environment = "dev"
  }
}

